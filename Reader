#include <string.h>
#include <stdio.h>
#include <stdlib.h>
#define masterPIN 1870
FILE *pw;
char string[30];
char plattform[30];
char *line;
char PW[64];
char ID[32];
char code[64] ={0};
int PIN = 0;
int SPW;
int SID;
int factor;
void Pineingabe(),GetPlattform(),openfile(),divideString(),decode(),defactorize(),finaloutput();

int main() {
   // Pineingabe();
    GetPlattform();
    openfile();
    divideString();
    defactorize();
    decode();
    finaloutput();
    fclose(pw);
}



void Pineingabe() {
    printf("enter your PIN:\n");
    scanf("%d", &PIN);
    switch (PIN) {
        case masterPIN:
            PIN = 1;
            break;
        default:
            PIN = 0;
            break;
    }

    if (PIN == 0) {
        exit(0);
    }
}
void GetPlattform(){
printf("which data want to drop:");
scanf("%s", plattform);
}
void openfile(){
    pw = fopen("data.txt", "r");
    if (pw == NULL) {
        printf("Cannot open file \n");
    }

    int bool = 0;
    while(bool == 0) {
        line = fgets(string, 30, pw);
        for (int i = 0; i < strlen(plattform); i++) {
            if (line[i] != plattform[i]) {
                break;
            }
            bool = 1;
        }
    }
    //printf("%s\n", line);
}
void divideString(){
    char *ptr = NULL;
    ptr = strtok(line, " ");
    ptr = strtok(NULL, " ");
    strcpy(code, ptr);
    //printf("%s\n", code);
    factor = code[(strlen(code)-1)]-'0';
    //printf("%d\n",factor);
    ptr = strtok(NULL, " ");
    SID = *ptr -'0';
    //printf("%d\n",SID);
    ptr = strtok(NULL, " ");
    SPW = *ptr -'0';
    //printf("%d\n",SPW);

}
void decode(){
    int * larger,*smaller;
    if (SID >= SPW) { larger = &SID;smaller = &SPW;}//case beide gleich lang //username größer pw
    else if (SID < SPW) { larger = &SPW;smaller = &SID;}//pw größer username
    int i =0,x=0;
    while (i < *smaller) {
        ID[i] = code[x];
        PW[i] = code[x + 1];
        x += 2;
        i++;
    }

    char* longers;
    if(SID>SPW){longers = ID;}
    if(SID<SPW){longers = PW;}

    while (i < *larger) {
        longers[i] = code[x];
        i++;x++;
    }
}
void defactorize(){
    for(int n = 0;n<strlen(code);n++){
        code[n] = code[n] - factor;

    }
}

void finaloutput(){
    printf("Login: %s\n", ID);
    printf("Password: %s\n", PW);
    int useless;
    scanf("%d",&useless);
}
